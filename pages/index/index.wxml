  -->
  <view bindtap="bindViewTap" class="userinfo">

   <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover" style=" top: 80%; "></image>

  </view>
  <view>
    <text class="userinfo-nickname">欢迎您：{{userInfo.nickName}}</text>
  </view>

  <view class="usermotto">
    <button size="default" plain="{{plain}}" hover-class="button-hover" disabled="{{disabled}}" bindtap="toCalc"> 计算器</button>
    <text> \n</text>
    <button size="default" plain="{{plain}}" hover-class="button-hover" disabled="{{disabled}}" bindtap="toForm">缩口换算</button>
    <text style="font-size:50%"> \n</text>
    <button size="default" plain="{{plain}}" hover-class="button-hover" disabled="{{disabled}}" bindtap="toJD">铰刀切片厚度计算</button>
    <text style="font-size:50%"> \n</text>
    <button size="default" plain="{{plain}}" hover-class="button-hover" disabled="{{disabled}}" bindtap="toGFN">功率·负荷·扭矩计算</button>
  </view>
    <text> \n</text>    <text> \n</text>
  <view>
    <navigator url="view" class="github" hover-class="navigator-hover">
      <icon type="{{iconType}}" class="icon" size="20" />info
    </navigator>
    <image style="width: 190px; height: 70px;" mode="{{item.mode}}" src="{{src}}"></image>
  </view>
</view>